<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_create_conversation"
        android:shortcutId="new_message"
        android:shortcutLongLabel="@string/shortcut_compose_new_message_label_long"
        android:shortcutShortLabel="@string/shortcut_compose_new_message_label">
        <intent
            android:action="NEW_MESSAGE"
            android:targetClass="com.waz.zclient.MainActivity"
            android:targetPackage="com.wire.internal" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_share_photo"
        android:shortcutId="share_photo"
        android:shortcutLongLabel="@string/shortcut_share_a_photo_label"
        android:shortcutShortLabel="@string/shortcut_share_a_photo_label">
        <intent
            android:action="SHARE_PHOTO"
            android:targetClass="com.waz.zclient.MainActivity"
            android:targetPackage="com.wire.internal" />/>
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_create_group"
        android:shortcutId="new_group"
        android:shortcutLongLabel="@string/shortcut_create_chat_long_label"
        android:shortcutShortLabel="@string/shortcut_create_chat_short_label">
        <intent
            android:action="GROUP_CONVERSATION"
            android:targetClass="com.waz.zclient.MainActivity"
            android:targetPackage="com.wire.internal" />
    </shortcut>
</shortcuts>

